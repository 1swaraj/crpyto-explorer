{
	"name": "CrpytoExplorer",
	"publisher": "1swaraj",
	"displayName": "CrpytoExplorer",
	"description": "Crpyto Explorer - Get prices of different crpyto currencies in vscode",
	"repository": {
		"type": "git",
		"url": "https://github.com/1swaraj/crpyto-explorer"
	},
	"icon": "assets/icon.jpg",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:crpyto.init",
		"onView:crpytoList"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sidebar-view",
					"title": "CrpytoExplorer",
					"icon": "assets/bitcoin-logo.svg"
				}
			]
		},
		"commands": [
			{
				"command": "crpyto.init",
				"title": "coins"
			},
			{
				"command": "crpytoList.refresh",
				"title": "Refresh",
				"icon": {
					"light": "assets/refresh-light.svg",
					"dark": "assets/refresh-dark.svg"
				}
			}
		],
		"views": {
			"sidebar-view": [
				{
					"id": "crpytoList",
					"name": "CrpytoExplorer",
					"icon": "assets/bitcoin-logo.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "crpytoList.refresh",
					"when": "view == crpytoList",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build": "vsce package",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vsce": "^1.83.0",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.7",
		"node-fetch": "^2.6.1"
	}
}